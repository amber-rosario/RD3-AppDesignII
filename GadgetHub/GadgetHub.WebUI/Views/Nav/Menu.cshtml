@model IEnumerable<string>

@* Home Button *@
@Html.ActionLink("Home", "List", "Gadget", null,
new { @class = "btn btn-outline-secondary w-100 btn-lg mb-2" })

@* Buttons for each categories *@
@foreach (var link in Model)
{
    @Html.RouteLink(link, new
{
    Controller = "Gadget",
    action = "List",
    category = link,
    page = 1
},


    new { @class = "btn btn-outline-secondary w-100 btn-lg mb-2" + (link == ViewBag.SelectedCategory ? "active" : "")})

    }